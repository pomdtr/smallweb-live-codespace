{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Mutagen Sync",
            "type": "shell",
            "command": [
                "mutagen",
                "sync",
                "create",
                "--name=smallweb",
                "--ignore=node_modules",
                "--ignore-vcs",
                "--mode=two-way-resolved",
                "${input:user}@smallweb.live:smallweb",
                "./smallweb",
            ],
        }
    ],
    "inputs": [
        {
            "id": "user",
            "type": "promptString",
            "description": "Enter your smallweb.live username",
        }
    ]
}
