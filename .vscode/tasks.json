{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Sync",
            "type": "shell",
            "command": [
                "mutagen",
                "sync",
                "create",
                "--name=smallweb",
                "--ignore=node_modules",
                "--ignore-vcs",
                "--mode=two-way-resolved",
                "server:${input:smallwebDir}",
                "./smallweb",
            ],
        }
    ],
    "inputs": [
        {
            "id": "smallwebDir",
            "type": "promptString",
            "default": "~/smallweb",
            "description": "Enter the path to the smallweb directory on your server",
        }
    ]
}
